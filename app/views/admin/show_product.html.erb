<% if @edit_mode %>
  <h1>Edit Product</h1>

  <%= form_with(model: @product, url: update_product_admin_path(@product), method: :patch) do |f| %>
    <%= render 'form', f: f %>
    <%= f.submit "Update Product" %>
  <% end %>
<% else %>
  <h1><%= @product.name %></h1>

  <p><%= @product.description %></p>
  <p>Price: <%= number_to_currency(@product.price) %></p>
  <p>Category: <%= @product.category.name %></p>
  <p><%= image_tag@product.image_url %></p>

  <%= link_to 'Edit', edit_product_admin_path(@product) %>

  <%= button_to "Delete", delete_product_admin_path(@product), method: :delete, data: {confirm: 'Are you sure you want to delete this product?'}%> |

  <%= link_to 'Back', admin_index_path %>
<% end %>
